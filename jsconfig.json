{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "preserve",
        "strictFunctionTypes": true,
        "baseUrl": ".",
        "paths": {
            "@images/*": [
                "assets/images/*"
            ],
            "@icons/*": [
                "assets/icons/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@public/*": [
                "public/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
        },
        "types": [
            "node",
        ]
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}